<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <filter>
        <filter-name>MainController</filter-name>
        <filter-class>danhpv.filter.MainController</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MainController</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>danhpv.listener.FirstListenerController</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>danhpv.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQuestionByAdminController</servlet-name>
        <servlet-class>danhpv.controllers.ViewQuestionByAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>danhpv.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQuestionDetailsController</servlet-name>
        <servlet-class>danhpv.controllers.ViewQuestionDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveQuestionController</servlet-name>
        <servlet-class>danhpv.controllers.RemoveQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccountController</servlet-name>
        <servlet-class>danhpv.controllers.CreateAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewFormUpdateQuestionController</servlet-name>
        <servlet-class>danhpv.controllers.ViewFormUpdateQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateQuestionController</servlet-name>
        <servlet-class>danhpv.controllers.CreateQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateQuestionController</servlet-name>
        <servlet-class>danhpv.controllers.UpdateQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetQuizController</servlet-name>
        <servlet-class>danhpv.controllers.GetQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQuestionInQuizController</servlet-name>
        <servlet-class>danhpv.controllers.ViewQuestionInQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAnswerToCartController</servlet-name>
        <servlet-class>danhpv.controllers.AddAnswerToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitQuizController</servlet-name>
        <servlet-class>danhpv.controllers.SubmitQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewHistoryQuizController</servlet-name>
        <servlet-class>danhpv.controllers.ViewHistoryQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewQuizDetailController</servlet-name>
        <servlet-class>danhpv.controllers.ViewQuizDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQuestionByAdminController</servlet-name>
        <url-pattern>/ViewQuestionByAdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQuestionDetailsController</servlet-name>
        <url-pattern>/ViewQuestionDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveQuestionController</servlet-name>
        <url-pattern>/RemoveQuestionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccountController</servlet-name>
        <url-pattern>/CreateAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewFormUpdateQuestionController</servlet-name>
        <url-pattern>/ViewFormUpdateQuestionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateQuestionController</servlet-name>
        <url-pattern>/CreateQuestionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateQuestionController</servlet-name>
        <url-pattern>/UpdateQuestionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetQuizController</servlet-name>
        <url-pattern>/GetQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQuestionInQuizController</servlet-name>
        <url-pattern>/ViewQuestionInQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAnswerToCartController</servlet-name>
        <url-pattern>/AddAnswerToCartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitQuizController</servlet-name>
        <url-pattern>/SubmitQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewHistoryQuizController</servlet-name>
        <url-pattern>/ViewHistoryQuizController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewQuizDetailController</servlet-name>
        <url-pattern>/ViewQuizDetailController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>
            Resource reference to a factory for java.sql.Connection
            instances that may be used for talking to a particular database that
            is configured in the server.xml file
        </description>
        <res-ref-name>
            DBConnection
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
